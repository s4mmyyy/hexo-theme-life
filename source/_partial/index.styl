
.post {
    max-width: 800px;
    margin: 0 auto;
    padding: 10px;
    display: flex;
    box-sizing: border-box;
    background-color: #002b36;
    img {
            max-width: 100%;
            height: auto;
        }

}

.post-header{
    max-width: 800px;
    margin: 0 auto;
    margin-top: -15px;
    padding: 5px;
    display: flex;
    box-sizing: border-box;
}

.posts  {

    .post-title {
        text-decoration: none;
        color: #eaedf3;
        &:hover{
            color: #66ccff;
    }
            
    }

    .post-meta {
        margin-right: 20px;
        color: #BABABA;
    }
}

.post-block{
    padding: 10px;
}