    width: 760px;
    margin: 0 auto;
    padding: 10px;
    box-sizing: border-box;
    
    img {
    max-width: 100%;
    height: auto;
    }
}

.post-time{
    color: #BABABA;
}

.post-title{
    color: #66ccff;
}

.post-font{
    font-size:18px; 
    color: #eaedf3;
}

/* 代码块样式 */


/* 代码块容器样式 */
.highlight, 
.post-content pre {
  position: relative;
  margin: 1em 0;
  padding: 1em;  /* 移到这里 */
  border-radius: 6px;
  overflow: auto;
  box-shadow: 0 2px 8px rgba(255, 255, 255, 0.35);
  background: rgb(40, 44, 52);
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  font-size: 0.9em;
  line-height: 1.5;
  color: #f8f8f8;
}

/* 如果 .highlight 内部还有 pre 元素，则重置其样式 */
.highlight pre {
  margin: 0;
  padding: 0;
  background: transparent;
  box-shadow: none;
}
/* 确保内部的 code 元素不产生额外样式 */
.post-content pre code {
  background: transparent;
  padding: 0;
  margin: 0;
  border: none;
  border-radius: 0;
  box-shadow: none;
  font-family: inherit;
  font-size: inherit;
  color: inherit;
}

/* 复制按钮样式 */
.copy-btn {
  position: absolute;
  top: 8px;
  right: 8px;
  padding: 4px 8px;
  background: #007acc;
  color: white;
  border: none;
  border-radius: 3px;
  cursor: pointer;
  font-size: 12px;
  z-index: 10;
}

.copy-btn:hover {
  background: #005a9e;
}